<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_bg_info"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_home_text_information_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="24dp"
            android:text="@string/home_text_information_title"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/ic_announcement_white_48dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/id_home_text_information_info_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingBottom="10dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="@string/home_text_information_info_default"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/id_home_text_information_info_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingBottom="10dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="@string/home_text_information_info_default"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/id_home_text_information_info_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingBottom="10dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="@string/home_text_information_info_default"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/id_home_text_information_info_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingBottom="10dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="@string/home_text_information_info_default"
        android:textColor="#ffffff" />
</LinearLayout>